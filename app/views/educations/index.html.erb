<h4><%= I18n.t('listado_educations_title') %></h4>
<%= botonera_index %>
<br>

<table class="table table-bordered">
  <thead>
    <tr>
      <th><%= I18n.t('form_escuela_ed') %></th>
      <th><%= I18n.t('form_añoinicial_ed') %></th>
      <th><%= I18n.t('form_añofinal_ed') %></th>
      <th><%= I18n.t('form_documento_ed') %></th>
      <th><%= I18n.t('form_promedio_ed') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @educations.each do |education| %>
      <tr>
        <td><%= education.school %></td>
        <td><%= education.yearInitial %></td>
        <td><%= education.yearFinal %></td>
        <td><%= education.DocumentReceived %></td>
        <td><%= education.average %></td>
        <td><%= link_to 'Editar', edit_education_path(education) %></td>
        <td><%= link_to 'Eliminar', education, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>



