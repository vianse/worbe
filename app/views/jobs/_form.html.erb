$( document ).ready(function() {
  $('#job_state_id').parent().hide();
  $('#job_city_id').parent().hide();
  var states =  $('#job_state_id').html();
                $('#job_country_id').change(function() {
  var country = $('#job_country_id :selected').text();
  var resp = country.replace(/([ #;&,.+*~\':"!^$[\]()=>|\/@])/g, '\\$1')
  var options = $(states).filter("optgroup[label="+ resp + "]").html();

                if (options)
                   {
                    $('#job_state_id').html(options);
                    $('#job_state_id').parent().show();
                   }
                else
                   {
                    $('#job_state_id').empty();
                    $('#job_state_id').parent().hide();
                   }
                });
  var ciudades =  $('#job_city_id').html();
                  $('#job_state_id').change(function() {
  var estado   =  $('#job_state_id :selected').text();
  var res = estado.replace(/([ #;&,.+*~\':"!^$[\]()=>|\/@])/g, '\\$1')
  var opciones =  $(ciudades).filter("optgroup[label=" + res + "]").html();
                if (opciones)
                   {
                    $('#job_city_id').html(opciones);
                    $('#job_city_id').parent().show();
                   }
                else
                   {
                    $('#job_city_id').empty();
                    $('#job_city_id').parent().hide();
                   }
                });
              });



$(function(){
