<% @jobs.each do |job| %>
  <div class="container">
    <div class="row">
      <div class="[ col-xs-12 col-sm-offset-1 col-sm-5 ]">
        <div class="[ panel panel-default ] panel-google-plus">
          <div class="panel-google-plus-tags">
            <ul>
              <li><%= job.tag.my_tags.count %> Personas con <%= job.tag.name %> </li>
            </ul>
            <ul>
              <li>Estatus: <%= job.status %></li>
            </ul>
          </div>
          <div class="panel-heading">
              <%= image_tag @business.logo_url(:thumb), :class=> "[ img-circle pull-left ]",size: "45x45" if @business.logo? %>
              <h3><%= job.name %></h3>
              <h5><span>Publicado hace <%= time_ago_in_words(job.created_at) %></span> </h5>
          </div>
          <div class="panel-body">
              <p><%= job.description %></p>
          </div>
          <div class="panel-footer">
              <a href="jobs/<%=job.id%>" type="button" class="[ btn btn-default ]">ver detalles</a> 
              <% if job.status == "Publicado" %>
                <button type="button" disabled class="[ btn btn-default ]">Publicar</button>
              <% else %>
                <button type="button" class="[ btn btn-default ]">editar</button>
                <%= link_to 'Publicar', updated_path(:status => "Publicado", :id => job.id), :method => :post,  :class =>"[ btn btn-default ]" %>
              <% end %>
                <button type="button" class="[ btn btn-default ]">Eliminar vacante</button>
                <%= link_to 'Cerrar vacante', updated_path(:status => "Cerrado", :id => job.id), :method => :post,  :class =>"[ btn btn-default ]" %>
                <p>Views: <%= job.countclicks %></p>    
          </div>
       </div>
     </div>
   </div>
 </div>

        <% if can? :update, @article %>
        <%= link_to 'Edit', edit_job_path(job) %>
        <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } 
        %><% end %>

<% end %>