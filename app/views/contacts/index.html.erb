<h1>Listing contacts</h1>

<table>
  <thead>
    <tr>
      <th>Business</th>
      <th>Name</th>
      <th>Last name</th>
      <th>Office</th>
      <th>Email</th>
      <th>Mobile phone</th>
      <th>Fixed phone</th>
      <th>Office phone</th>
      <th>Ext</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.business.name %></td>
        <td><%= contact.name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.office %></td>
        <td><%= contact.email %></td>
        <td><%= contact.mobile_phone %></td>
        <td><%= contact.fixed_phone %></td>
        <td><%= contact.office_phone %></td>
        <td><%= contact.ext %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

