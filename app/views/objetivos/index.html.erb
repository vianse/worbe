<h1>Listing objetivos</h1>

<table>
  <thead>
    <tr>
      <th>Cv</th>
      <th>Idioma</th>
      <th>User</th>
      <th>Objetivos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @objetivos.each do |objetivo| %>
      <tr>
        <td><%= objetivo.cv.title %></td>
        <td><%= objetivo.idioma.idioma %></td>
        <td><%= objetivo.user.name %></td>
        <td><%= objetivo.objetivos %></td>
        <td><%= link_to 'Show', objetivo %></td>
        <td><%= link_to 'Edit', edit_objetivo_path(objetivo) %></td>
        <td><%= link_to 'Destroy', objetivo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Objetivo', new_objetivo_path %>
