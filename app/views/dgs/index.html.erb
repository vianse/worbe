<h4><%= I18n.t('listado_courses_title') %></h4>
<% if @dgs.blank? %>
<%= botonera_index_dgs %>
<% else %>
<%= botonera_index_dgs_existe %>
<% end %>
<br>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dgs.each do |dg| %>
      <tr>
        <td><%= dg.name %></td>
        <td><%= image_tag dg.photo_url.to_s %></td>
        <td><%= link_to 'Editar', edit_dg_path(dg) %></td>
        <td><%= link_to 'Eliminar', dg, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
